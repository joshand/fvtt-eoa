<div class="dice-roll">
<div class="tinyd6 dice-breakdown justify-content-center">
    {{#if msg}}{{{msg}}}<hr>{{/if}}
    {{#each parts as |dice_type|}}
        {{#if dice_type.rolls }}
        <label>{{dice_type.formula}}</label><br>
        {{/if}}
        {{#if (eq dice_type.faces 8)}}
            {{#each dice_type.rolls as |die|}}
                <span class="mx-3">
                    <span class="fas fa-2x {{face2 die.result }}"></span>
                </span>
            {{/each}}
        {{else}}
            {{#each dice_type.rolls as |die|}}
                <span class="mx-3">
                    <span class="fas fa-2x {{face die.result }}"></span>
                </span>
            {{/each}}
        {{/if}}
        {{#if dice_type.rolls}}
                <br>
        {{/if}}
    {{/each}}
</div>


</div>
